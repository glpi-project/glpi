{% macro menu_links(entry) %}
    {% set url = '#' %}
    {#% if entry.page is defined %}{% set url =  entry.page %}{% endif %#}
    {% if entry.content is defined %}
        {% set first = entry.content|first %}
        {% if first.itemtype is defined %}{% set url = path_for('list', {'itemtype': first.itemtype|lower}) %}{% endif %}
    {% endif %}

    {% set is_active = false %}

    {% if entry.content is defined and entry.content|length %}
        {% for child in entry.content %}
            {% if child.itemtype is defined and child.itemtype == current_itemtype %}
                {% set is_active = true %}
            {% endif %}
        {% endfor %}
    {% endif %}
    <li {% if entry.content is defined and entry.content|length %} class="treeview{% if is_active %} active menu-open{% endif %}"{% endif %}>
        <a href="{{ url }}">
            {{ entry.title }}
            <span class="pull-right-container">
              <i class="fa fa-angle-left pull-right"></i>
            </span>
        </a>
    {% if entry.content is defined %}
        <ul class="treeview-menu">
        {% for child in entry.content %}
            <li{% if child.itemtype is defined and child.itemtype == current_itemtype %} class="active"{% endif %}>
                <a href="{{ child.page }}">{{ child.title|default(__('Missing menu label')) }}</a>
            </li>
        {% endfor %}
        </ul>
    {% endif %}
    </li>
{% endmacro %}

