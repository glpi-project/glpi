<div class="d-flex mx-n2 my-n2"
     data-glpi-knowbase-article
     data-glpi-kb-item-id="{{ item_id }}"
     data-glpi-kb-can-edit="{{ can_edit ? 'true' : 'false' }}">
    <article class="col-9 container ms-0 px-4 py-3 kb-article">
        <div class="d-flex align-items-center mb-3">
            <h1 class="fw-bold mb-0" data-testid="subject">{{ subject }}</h1>
            <div class="ms-auto d-flex align-items-center gap-2">
                {# Edit/Save/Cancel buttons #}
                {% if can_edit %}
                    <div class="kb-editor-actions d-flex gap-2">
                        <button type="button"
                                class="btn btn-outline-secondary"
                                data-action="toggle-edit"
                                data-testid="edit-button">
                            <i class="ti ti-edit me-1"></i>{{ __('Edit') }}
                        </button>
                        <button type="button"
                                class="btn btn-primary d-none"
                                data-action="save"
                                data-testid="save-button">
                            <i class="ti ti-device-floppy me-1"></i>{{ __('Save') }}
                        </button>
                        <button type="button"
                                class="btn btn-outline-secondary d-none"
                                data-action="cancel"
                                data-testid="cancel-button">
                            {{ __('Cancel') }}
                        </button>
                    </div>
                {% endif %}

                {# Actions dropdown #}
                <div class="dropdown cursor-pointer d-flex align-items-center">
                    {% if edit_mode and actions|length > 0 %}
                        <i
                            class="ti ti-dots-vertical pointer-events-none"
                            data-glpi-kb-dots
                            data-bs-toggle="dropdown"
                            aria-expanded="false"
                            role="button"
                            title="{{ __('More actions') }}"
                        ></i>
                        <ul class="dropdown-menu" data-bs-popper="none">
                            {% for action in actions %}
                                <li>
                                    <button
                                        type="button"
                                        class="dropdown-item {{ action.is_danger ? "text-danger" : "" }}"
                                        aria-label="{{ action.label }}"
                                        data-glpi-kb-action="{{ action.type.value }}"
                                        {% for key, param in action.params %}
                                            data-glpi-kb-action-param-{{ key }}="{{ param }}"
                                        {% endfor %}
                                    >
                                        <i class="{{ action.icon }}"></i>
                                        <span>{{ action.label }}</span>

                                        {% if action.counter is not null %}
                                            <span
                                                class="badge glpi-badge ms-auto"
                                                data-testid="{{ action.params.key }}-counter"
                                                data-glpi-kb-action-counter="{{ action.params.key }}"
                                            >{{ action.counter }}</span>
                                        {% endif %}

                                        {% if action.type.value == "TOGGLE_VALUE" %}
                                            <label class="form-check form-switch ms-auto mb-0">
                                                <input
                                                    type="checkbox"
                                                    class="form-check-input ms-0"
                                                    {{ action.params.checked ? 'checked' : '' }}
                                                >
                                            </label>
                                        {% endif %}
                                    </button>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="text-muted d-flex align-items-center gap-3">
            {# Last update #}
            <div class="d-flex align-items-center" data-testid="last-update">
                <i class="ti ti-clock me-1 fs-3"></i>
                <span>
                    <span>{{ __("Updated:") }}</span>
                    <time
                        title="{{ last_update_date }}"
                        data-bs-toggle="tooltip"
                        data-bs-placement="bottom"
                    >{{ last_update_relative_date }}</time>
                    <span>{{ __("by") }}</span>
                </span>
                <address class="mb-0">
                    {% if last_update_author_link is not null and last_update_can_view_author %}
                        <a
                            rel="author"
                            href="{{ last_update_author_link }}"
                            class="badge bg-azure-lt ms-1"
                            data-testid="author_link"
                        >
                            @{{ last_update_author_name }}
                        </a>
                    {% else %}
                        <span class="badge bg-dark-lt ms-1">
                            @{{ last_update_author_name }}
                        </span>
                    {% endif %}
                </address>
            </div>

            {# Views #}
            <div class="d-flex align-items-center">
                <i class="ti ti-eye me-1 fs-3"></i>
                <span data-testid="views">
                    {% if views == 0 %}
                        {{ __("No views") }}
                    {% else %}
                        {{ _n("%s view", "%s views", views)|format(views|formatted_integer) }}
                    {% endif %}
                </span>
            </div>

            {# Documents count #}
            {% if documents_count > 0 %}
            <div class="d-flex align-items-center">
                <i class="ti ti-paperclip me-1 fs-3"></i>
                <a href="#kb-documents" class="text-muted" data-testid="documents-count">
                    {{ _n("%s document", "%s documents", documents_count)|format(documents_count) }}
                </a>
            </div>
            {% endif %}
        </div>

        <hr class="mt-4 mb-4">

        {# Tiptap editor container #}
        <div id="kb-tiptap-editor"
             class="rich_text_container"
             data-testid="content">
            {{ answer|safe_html }}
        </div>

        {# Documents section #}
        {% if documents|length > 0 or can_add_documents %}
        <div id="kb-documents" class="kb-documents-footer mt-5 pt-4 border-top">
            {# Tab navigation #}
            <ul class="nav nav-underline mb-3" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="kb-documents-tab-btn" data-bs-toggle="tab" data-bs-target="#kb-documents-tab" type="button" role="tab">
                        <i class="ti ti-paperclip me-1"></i>{{ __('Documents') }}
                        <span class="badge bg-secondary bg-opacity-25 text-body ms-1">{{ documents_count }}</span>
                    </button>
                </li>
                {# Related items tab - placeholder for future implementation #}
                {# <li class="nav-item" role="presentation">
                    <button class="nav-link" id="kb-items-tab-btn" data-bs-toggle="tab" data-bs-target="#kb-items-tab" type="button" role="tab">
                        <i class="ti ti-link me-1"></i>{{ __('Related items') }}
                        <span class="badge bg-secondary bg-opacity-25 text-body ms-1">0</span>
                    </button>
                </li> #}
            </ul>

            {# Tab content #}
            <div class="tab-content">
                <div class="tab-pane fade show active" id="kb-documents-tab" role="tabpanel">
                    {% if documents|length > 0 %}
                    <div class="d-flex flex-wrap gap-2 mb-2">
                        {% for doc in documents %}
                        <a href="{{ doc.download_url }}"
                           class="kb-document-badge badge bg-light text-dark d-flex align-items-center gap-2 text-decoration-none"
                           target="_blank"
                           data-testid="document-chip">
                            <i class="ti {{ doc.icon_class }} {{ doc.color_class }}"></i>
                            <span>{{ doc.filename }}</span>
                        </a>
                        {% endfor %}
                    </div>
                    {% endif %}

                    {% if can_add_documents %}
                    <button type="button"
                            class="btn btn-sm btn-outline-primary mt-2"
                            data-bs-toggle="modal"
                            data-bs-target="#kb-add-document-modal">
                        <i class="ti ti-plus me-1"></i>{{ __('Add Document') }}
                    </button>

                    {# Modal for document upload/linking #}
                    <div class="modal fade" id="kb-add-document-modal" tabindex="-1">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header border-0 pb-0 pt-3">
                                    <ul class="nav nav-underline kb-modal-nav flex-fill mb-0" role="tablist">
                                        <li class="nav-item" role="presentation">
                                            <button class="nav-link active" id="kb-modal-upload-tab" data-bs-toggle="tab" data-bs-target="#kb-modal-upload-pane" type="button" role="tab" aria-controls="kb-modal-upload-pane" aria-selected="true">
                                                <i class="ti ti-upload me-1"></i>{{ __('Upload a file') }}
                                            </button>
                                        </li>
                                        <li class="nav-item" role="presentation">
                                            <button class="nav-link" id="kb-modal-link-tab" data-bs-toggle="tab" data-bs-target="#kb-modal-link-pane" type="button" role="tab" aria-controls="kb-modal-link-pane" aria-selected="false">
                                                <i class="ti ti-link me-1"></i>{{ __('Link a document') }}
                                            </button>
                                        </li>
                                    </ul>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="{{ __('Close') }}"></button>
                                </div>
                                <div class="modal-body p-4">
                                    <div class="tab-content">
                                        <div class="tab-pane fade show active" id="kb-modal-upload-pane" role="tabpanel" aria-labelledby="kb-modal-upload-tab">
                                            <div class="text-center text-muted py-4">
                                                <i class="ti ti-cloud-upload fs-1 mb-3 d-inline-block"></i>
                                                <p>{{ __('Document upload coming soon...') }}</p>
                                                <a href="{{ 'KnowbaseItem'|itemtype_form_path }}?id={{ item_id }}&amp;forcetab=Document_Item$1"
                                                   class="btn btn-primary">
                                                    {{ __('Use existing interface') }}
                                                </a>
                                            </div>
                                        </div>
                                        <div class="tab-pane fade" id="kb-modal-link-pane" role="tabpanel" aria-labelledby="kb-modal-link-tab">
                                            <div class="text-center text-muted py-4">
                                                <i class="ti ti-file-symlink fs-1 mb-3 d-inline-block"></i>
                                                <p>{{ __('Link existing documents coming soon...') }}</p>
                                                <a href="{{ 'Document'|itemtype_search_path }}"
                                                   class="btn btn-primary">
                                                    {{ __('Use existing interface') }}
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
        {% endif %}
    </article>
    <div
        class="col-3 kb-sidepanel px-4 py-3 d-none d-flex flex-column"
        data-glpi-knowbase-side-panel
    >
    </div>
</div>

<script type="module">
    (async () => {
        const module = await import(
            "{{ js_path('js/modules/Knowbase/ArticleController.js') }}"
        );
        new module.GlpiKnowbaseArticleController(
            document.querySelector('[data-glpi-knowbase-article]'),
            document.querySelector('[data-glpi-knowbase-side-panel]'),
        );
    })();
</script>
