{% extends "pages/tools/kb/sidepanel/base.html.twig" %}

{% block icon %}ti ti-history{% endblock %}
{% block title %}{{ __("History") }}{% endblock %}

{% block content %}
    <div class="d-flex flex-column row-gap-3 overflow-auto flex-grow-1 mx-n4 my-n4 px-4 py-4" data-glpi-revisions>
        {% for revision in revisions %}
            {{ include('pages/tools/kb/sidepanel/revision_item.html.twig', {
                id: id,
                revision: revision,
                can_revert: can_revert,
            }, with_context = false) }}
        {% endfor %}
    </div>
{% endblock %}
