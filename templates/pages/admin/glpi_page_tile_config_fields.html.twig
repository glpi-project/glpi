{% import 'components/form/fields_macros.html.twig' as fields %}

{{ fields.textField('title', tile.getTitle(), __('Title'), {
    full_width: true,
    is_horizontal: false,
    maxlength: 255,
}) }}

{{ fields.textareaField(
    'description',
    tile.getDescription(),
    __('Description'), {
        full_width: true,
        is_horizontal: false,
        enable_richtext: true,
    }
) }}

{{ fields.illustrationField(
    'illustration',
    tile.getIllustration(),
    __('Illustration'),
    {
        is_horizontal: false,
        full_width : true,
        backdrop: false,
        extra_css_classes: 'illustration-selector-extra-margin',
    }
) }}

{{ fields.dropdownArrayField(
    'page',
    tile.getPage(),
    tile.getPossiblesPages(),
    __('Target page'),
    {
        full_width: true,
        is_horizontal: false,
    }
) }}
