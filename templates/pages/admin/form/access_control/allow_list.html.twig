{# @var \Glpi\Form\AccessControl\ControlType\AllowListConfig config #}

{# Multi dropdown (User, Group and Profile) #}
{{ call(
    "\\Glpi\\Form\\AccessControl\\ControlType\\AllowListDropdown::show",
    ["_allow_list_dropdown", {
        'users_id'   : config.user_ids,
        'groups_id'  : config.group_ids,
        'profiles_id': config.profile_ids,
    }]
)|raw }}

{# Helper link that will be populated using a JS script #}
<div class="mt-2">
    <a href="" data-glpi-dropdown-count-preview></a>
</div>

<script>
    // Each time the dropdown is modified, populate the helper link
    $("select[name='_allow_list_dropdown[]']").on('change', async function() {
        const response = await $.post(
            CFG_GLPI.root_doc + '/ajax/form/allow_list_dropdown_count_users.php',
            {
                values: $(this).val()
            }
        );

        $('[data-glpi-dropdown-count-preview]')
            .attr('href', response.link ?? "")
            .html("{{ __('There are %d user(s) matching these criteria.')|e('js') }}".replace("%d", response.count))
        ;
    });
    $("select[name='_allow_list_dropdown[]']").trigger('change');
</script>
