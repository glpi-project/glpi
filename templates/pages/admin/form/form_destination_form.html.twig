{#
    REQUIRED:
        - `destination`: FormDestination
        - `form`: Form
        - `can_update`: bool
        - `concrete_destination`: FormDestinationInterface|null
        - `_source`: string
#}

{% set _source = _source|default('glpi') %}

<form id="form-destination-{{ destination.getID() }}">
    <div class="overflow-x-hidden px-4">
        {% if concrete_destination %}
            {{ concrete_destination.renderConfigForm(
                form,
                destination,
                destination.getConfig()
            )|raw }}
        {% else %}
            <div class="mt-2 alert alert-danger" role="alert">
                {{ __('This destination is not available, the plugin "%1$s" is deactivated or removed.')|format(_source) }}
            </div>
        {% endif %}
        {% if (concrete_destination ? concrete_destination.useDefaultConfigLayout() : true) and can_update %}
            <div class="mt-3 mb-3">
                {{ include('pages/admin/form/form_destination_actions.html.twig', {
                    form: form,
                    destination: destination
                }, with_context = false) }}
            </div>
        {% endif %}
    </div>

    {# Hidden values #}
    <input type="hidden" name="id" value="{{ destination.getID() }}"/>
    <input type="hidden" name="_glpi_csrf_token" value="{{ csrf_token() }}"/>
</form>
