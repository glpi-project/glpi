{% import 'components/form/fields_macros.html.twig' as fields %}

<form method="POST" action="{{ item.getFormURL() }}">

    {# TODO: improve UI #}
    <div class="ms-3 mt-2">
        <h2 class="mb-3">{{ item.fields.name }}</h2>

        <div class="mb-3">
            <label class="form-label">
                {{ (__("Author")) }}
            </label>
            <div class="form-control-plaintext">{{ get_item('User', item.fields.users_id).getLink()|raw }}</div>
        </div>

        <div class="mb-3">
            <label class="form-label">
                {{ (__("Date")) }}
            </label>
            <div
                class="form-control-plaintext"
            >
                {{ item.fields.date_creation }}
            </div>
        </div>

        {% for answer in item.fields.answers %}
            {% if answer.value is not empty %}
                <div class="mb-3">
                    <label class="form-label">
                        {{ answer.label }}
                    </label>
                    {% set question_type = question_types[answer.type] %}
                    {{ question_type.renderAnswerTemplate(answer.value)|raw }}
                </div>
            {% endif %}
        {% endfor %}
    </div>

    {# Show actions #}
    {{ include("components/form/buttons.html.twig") }}
</form>
