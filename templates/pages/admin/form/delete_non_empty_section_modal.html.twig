{# Delete non-empty section confirmation modal #}
<div
    data-glpi-form-editor-delete-non-empty-section-modal
    class="modal modal-blur fade"
    aria-modal="true"
    role="dialog"
    aria-label="{{ __("Delete non-empty section") }}"
>
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header p-3">
                <div>
                    <h3 class="mb-2">{{ __("This section contains elements") }}</h3>
                    <p class="m-0 text-muted">{{ __("Deleting this section will also delete all questions and comments it contains. This action cannot be undone.") }}</p>
                </div>
                <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="{{ __("Close") }}"
                ></button>
            </div>
            <div class="modal-body p-0">
                <div class="list-group list-group-flush list-group-hoverable" data-glpi-form-editor-delete-section-items-list>
                    {# List items will be populated dynamically by JavaScript #}
                </div>
            </div>
            <div class="modal-footer">
                <button
                    type="button"
                    class="btn btn-link"
                    data-bs-dismiss="modal"
                >
                    {{ __("Cancel") }}
                </button>
                <button
                    type="button"
                    class="btn btn-danger"
                    data-glpi-form-editor-confirm-delete-section
                >
                    {{ __("Delete section and all its elements") }}
                </button>
            </div>
        </div>
    </div>

    {# Item template for elements list #}
    <div class="d-none" data-glpi-form-editor-delete-section-item-template>
        <div class="list-group-item d-flex align-items-center space-x-2 p-3">
            <i class="ti ti-alert-triangle fa-lg text-warning"></i>
            <a href="#" class="m-0" style="font-weight: var(--tblr-font-weight-medium)"
               data-glpi-form-editor-delete-section-item-name
               data-glpi-form-editor-delete-section-item-selector
               data-glpi-form-editor-delete-section-item-uuid></a>
        </div>
    </div>
</div>
