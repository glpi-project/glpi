{% import 'components/form/fields_macros.html.twig' as fields %}

<input
    type="hidden"
    name="{{ input_name }}[itemtype]"
    value="{{ itemtype }}"
    data-glpi-conditions-editor-value
>

{% if input_value is iterable and input_value.itemtype is not same as(itemtype) %}
    {% set input_value = {
        'itemtype': itemtype,
        'items_id': 0,
    } %}
{% endif %}

{{ fields.dropdownField(
    itemtype,
    input_name ~ '[items_id]',
    input_value.items_id|default(0),
    '',
    {
        'no_label'     : true,
        'wrapper_class': '',
        'mb'           : '',
        'aria_label'   : input_label,
        'addicon'      : false,
        'comments'     : '',
        'specific_tags': {
            'data-glpi-conditions-editor-value': '',
        },
        'field_class'  : [
            'me-2 value-selector flex-grow-1',
        ]|join(' '),
    }
) }}
