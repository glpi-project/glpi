   {% endif %}
   {% if options.clearable %}
      {% set clear_chk %}
         <input type="checkbox" name="_blank_{{ name }}" id="_blank_{{ name }}">&nbsp;<label for="_blank_{{ name }}">{{ __('Clear') }}</label>
      {% endset %}
      {% set field = field ~ clear_chk %}
   {% endif %}

   {{ _self.field(name, field, label, options) }}
{% endmacro %}

