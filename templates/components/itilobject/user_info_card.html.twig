<div class="container p-0 user-info-card">
   <div class="row">
      <div class="col">
         {% include 'components/itilobject/user_picture.html.twig' with {'users_id': user['id']} %}
      </div>
      <div class="col-auto">
         <h3>{{ user['user_name'] }}</h3>
         {% if have_right('user', constant('READ')) %}
            <div>
               <i class="fas fa-user"></i>
               {{ user['login'] }}
            </div>
         {% endif %}
         {% if user['email']|length > 0 %}
            <div>
               <i class="fas fa-envelope"></i>
               <a href="mailto:{{ user['email'] }}">{{ user['email'] }}</a>
            </div>
         {% endif %}
         {% if user['phone']|length > 0 %}
            <div>
               <i class="fas fa-phone"></i>
               <a href="tel:{{ user['phone'] }}">{{ user['phone'] }}</a>
            </div>
         {% endif %}
         {% if user['mobile']|length > 0 %}
            <div>
               <i class="fas fa-mobile"></i>
               <a href="tel:{{ user['mobile'] }}">{{ user['mobile'] }}</a>
            </div>
         {% endif %}
         {% if user['locations_id'] > 0 %}
            <div>
               {{ 'Location'|itemtype_name }}: {{ getDropdownName('glpi_locations', user['locations_id']) }}
            </div>
         {% endif %}
         {% if user['usertitles_id'] > 0 %}
            <div>
               {{ _x('person', 'Title') }}: {{ getDropdownName('glpi_usertitles', user['usertitles_id']) }}
            </div>
         {% endif %}
         {% if user['usercategories_id'] > 0 %}
            <div>
               {{ __('Category') }}: {{ getDropdownName('glpi_usercategories', user['usercategories_id']) }}
            </div>
         {% endif %}
         {% if user['groups_id'] > 0 %}
            <div>
               {{ __('Default group') }}: {{ getDropdownName('glpi_groups', user['groups_id']) }}
            </div>
         {% endif %}
      </div>
   </div>
</div>
