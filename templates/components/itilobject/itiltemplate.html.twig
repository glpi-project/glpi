{% extends 'dropdown_form.html.twig' %}

{% block more_fields %}
   {% if affected_item_count is defined and affected_item_count > 0 %}
      <script>
          (function() {
              const save_button = $('button[name="update"]');
              const delete_button = $('button[name="delete"]');
              const confirm_message = '{{ __('This template affects one or more items, are you sure you want to perform this action?') }}';

              if (save_button.length > 0) {
                  save_button.on('click', function() {
                      //Ask for confirmation
                      return confirm(confirm_message);
                  });
              }
              if (delete_button.length > 0) {
                  delete_button.on('click', function() {
                      //Ask for confirmation
                      return confirm(confirm_message);
                  });
              }
          })();
      </script>
   {% endif %}
{% endblock %}
