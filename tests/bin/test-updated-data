$root = dirname(__DIR__, 2);
define('GLPI_CONFIG_DIR', $root . '/tests/config');
define('GLPI_VAR_DIR', $root . '/tests/files');
define(
   'PLUGINS_DIRECTORIES',
   [
      $root . '/plugins',
      $root . '/tests/fixtures/plugins',
   ]
);

require $root . '/vendor/autoload.php';

$kernel = new \Glpi\Kernel\Kernel('testing');
$kernel->loadCommonGlobalConfig();

$command = new \Glpi\Tests\Command\TestUpdatedDataCommand();

$app = new \Symfony\Component\Console\Application('Test updated data against fresh install', GLPI_VERSION);
$app->add($command);
$app->setDefaultCommand($command->getName(), true);
$app->run();
